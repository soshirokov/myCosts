{
  /* Visit https://firebase.google.com/docs/database/security to learn more about security rules. */
  "rules": {
    "profiles": {
      "$user_id": {
        ".read": "auth != null",
        ".write": "$user_id === auth.uid"
      }
    },
    "costs": {
      "$user_id": {
        ".indexOn": "m",
        ".read": "auth != null",
        ".write": "$user_id === auth.uid"
      }
    }
  }
}